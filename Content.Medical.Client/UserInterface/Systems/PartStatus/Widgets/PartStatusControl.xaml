<widgets:PartStatusControl
    xmlns="https://spacestation14.io"
    xmlns:gfx="using:Robust.Client.Graphics"
    xmlns:controls="using:Content.Client.UserInterface.Controls"
    xmlns:widgets="using:Content.Medical.Client.UserInterface.Systems.PartStatus.Widgets"
